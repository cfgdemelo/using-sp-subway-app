<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.sp.gdg.comousarometroemsp.dica5">

    <TextView
        android:id="@+id/tip"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/tip5"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="30dp"/>

    <ImageView
        android:layout_toRightOf="@id/tip"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/googleplay"
        android:scaleType="centerInside"
        android:onClick="getIt"
        android:layout_margin="20dp"/>
    <Button
        android:layout_toLeftOf="@id/proximo1"
        android:id="@+id/inicio"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/buttonMain"
        android:layout_alignParentBottom="true"
        android:onClick="fromBegin"
        android:layout_margin="30dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>